<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.danych.hurtownie.gui.controllers.AppController">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <HBox alignment="CENTER" GridPane.columnSpan="3" GridPane.rowIndex="0">
        <padding><Insets bottom="50"/></padding>
        <Text id="welcome-text" text="ETL" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" />
    </HBox>
    <TextField  fx:id="inputField" alignment="center" promptText="type product code" GridPane.columnSpan="3" GridPane.rowIndex="1" prefWidth="100.0" />
    <Button fx:id="extractButton" onAction="#handleExtractButton" id="glass-grey" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="54.0" text="E" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <Button fx:id="transformButton" onAction="#handleTransformButton" id="glass-grey" disable="true" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="57.0" text="T" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <Button fx:id="loadButton" onAction="#handleLoadButton" id="glass-grey" disable="true" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="54.0" text="L" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <Button fx:id="etlButton" onAction="#handleEtlButton" id="glass-grey" alignment="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="57.0" text="ETL" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    <HBox alignment="CENTER" GridPane.columnSpan="3" GridPane.rowIndex="4">
        <Button onAction="#commentsOverview" id="glass-grey" mnemonicParsing="false" text="Show Comments" />
        <Button onAction="#deleteButton" id="glass-red" text="Delete Comments"/>
    </HBox>
   <TextArea fx:id="outputField"  disable="true" prefHeight="100.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="5"/>

   <columnConstraints>
      <ColumnConstraints maxWidth="67.0" minWidth="-Infinity" percentWidth="33.0" prefWidth="50.0" />
      <ColumnConstraints maxWidth="100.0" minWidth="42.0" percentWidth="33.0" prefWidth="61.0" />
      <ColumnConstraints maxWidth="45.0" minWidth="0.0" percentWidth="33.0" prefWidth="40.0" />
   </columnConstraints>

</GridPane>
